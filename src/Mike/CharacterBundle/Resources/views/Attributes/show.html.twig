{% extends '::base.html.twig' %}
{% block title -%}Attribute{% endblock %}

{% block body -%}
    <h1>Attribute</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ entity.min }}</td>
            </tr>
            <tr>
                <th>Max</th>
                <td>{{ entity.max }}</td>
            </tr>
            <tr>
                <th>Unit</th>
                <td>{{ entity.unit }}</td>
            </tr>
        </tbody>
    </table>
	<div>
	    <a class="btn btn-default btn-xs" href="{{ path('attributes') }}">
	        Back
	    </a>
	</div>
	<div>
	    <a class="btn btn-default btn-xs" href="{{ path('attributes_edit', { 'id': entity.id }) }}">
	        Edit
	    </a>
    </div>
    {{ form(delete_form) }}
{% endblock %}
